citHeader("To cite the spsurvey package in publications use:")

citEntry(
   entry="Manual",
   title="spsurvey: Spatial Survey Design and Analysis",
   author="Thomas M. Kincaid and Anthony R. Olsen",
   year=2018,
   note="R package version 3.4",
   textVersion=paste("Kincaid, T. M. and Olsen, A. R. (2017).",
                      "spsurvey: Spatial Survey Design and Analysis.",
                      "R package version 3.4.")
)
